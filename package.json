{
  "name": "manual",
  "version": "1.0.0",
  "description": "Functions and constants for man page generation",
  "author": "muji <noop@xpm.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmpfs/manual"
  },
  "bugs": {
    "url": "https://github.com/tmpfs/manual/issues",
    "email": "muji <noop@xpm.io>"
  },
  "keywords": [
    "cli",
    "manual",
    "man",
    "documentation"
  ],
  "devDependencies": {
    "chai": "~3.4.1",
    "coveralls": "~2.11.6",
    "istanbul": "~0.4.2",
    "mocha": "~2.3.4"
  },
  "engine": [
    "node >= 0.10.21"
  ],
  "scripts": {
    "lint": "jshint . && jscs .",
    "clean": "rm -rf ./coverage",
    "readme": "mdp --force -v",
    "test": "mocha test/spec",
    "cover": "istanbul cover _mocha -- test/spec",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "mdp": {
    "title": {
      "ref": "name",
      "format": "%s"
    },
    "pedantic": true,
    "include": "doc/readme",
    "require": "./",
    "links": "links.md",
    "base": "https://github.com/tmpfs/manual",
    "partial": [
      {
        "ref": "description"
      },
      {
        "inc": [
          "introduction.md",
          "install.md"
        ]
      },
      {
        "text": "Constants are shown below see [index.js](/index.js) for function definitions.",
        "req": "index.js",
        "type": "code",
        "language": "javascript",
        "stringify": false
      },
      {
        "inc": [
          "developer.md",
          "license.md"
        ]
      }
    ]
  }
}
